   "dependencies": {},
   "devDependencies": {
      "browser-sync": "^2.23.6",
      "del": "^3.0.0",
      "gulp": "^3.9.1",
      "gulp-copy": "^1.1.0",
      "onchange": "^3.3.0"
   }
}
