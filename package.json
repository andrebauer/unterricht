{
   "name": "linux",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
       "test": "echo \"Error: no test specified\" && exit 1",
       "build:html": "asciidoctor -r asciidoctor-diagram -r asciidoctor-pdf -b html _build/docs/*/*/*.adoc _build/docs/*/*.adoc _build/docs/*.adoc",
       "build:pdf": "asciidoctor -r asciidoctor-diagram -r asciidoctor-pdf -b pdf -a allow-uri-read _build/docs/*/*/*.adoc _build/docs/*/*/slides/*.adoc",
       "build:slides": "asciidoctor-revealjs -a revealjsdir=https://cdnjs.cloudflare.com/ajax/libs/reveal.js/3.3.0 -r asciidoctor-diagram _build/docs/*/*/slides/*.adoc",
       "old_build": "npm run build:html && npm run build:pdf && npm run build:slides",
       "build": "gulp build",
       "sync": "browser-sync start --config bs-config.js",
       "sync2": "browser-sync start _build/docs/*/*/*.html",
       "watch": "onchange docs/*/*/*.adoc docs/*/*/*/*.adoc docs/*/*.adoc docs/*.adoc -- gulp build",
       "serve": "ruby -run -e httpd _build/docs -p 5000 -b 127.0.0.1",
       "clean": "gulp clean"
   },
   "author": "Andr√© Bauer",
   "license": "CC-BY-SA",
   "dependencies": {},
   "devDependencies": {
      "browser-sync": "^2.23.6",
      "del": "^3.0.0",
      "gulp": "^3.9.1",
      "gulp-copy": "^1.1.0",
      "onchange": "^3.3.0"
   }
}
